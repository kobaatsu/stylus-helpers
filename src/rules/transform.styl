// x / y / z を設定する
setTransformXYZ(prop, arguments)
  x = arguments[0] if typeof(arguments[0]) is 'unit'
  if typeof(arguments[1]) is 'unit'
    y = arguments[1]
  else if x
    y = x
  z = arguments[2] if typeof(arguments[2]) is 'unit'

  if typeof(z) is 'unit'
    prop + '(' + x + ', ' + y + ', ' + z + ')'
  else
    prop + '(' + x + ', ' + y + ')'


trfr(arguments)
  transform: setTransformXYZ(rotate, arguments)
trfr-xs()
  +xs()
    trfr(arguments)
trfr-sm()
  +sm()
    trfr(arguments)
trfr-md()
  +md()
    trfr(arguments)
trfr-lg()
  +lg()
    trfr(arguments)

if index(breakpoints, xl)
  trfr-xl()
    +xl()
      trfr(arguments)

